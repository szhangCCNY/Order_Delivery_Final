<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/ibNotifAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llMsgContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/ibNotifDeny"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_baseline_check_24" />

    <ImageButton
        android:id="@+id/ibNotifDeny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llMsgContainer"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:srcCompat="@drawable/ic_baseline_clear_24" />

    <ImageButton
        android:id="@+id/ibNotifIgnore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llMsgContainer"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/ic_baseline_remove_24" />

    <RelativeLayout
        android:id="@+id/llMsgContainer"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNotifSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="0dp"
            android:text="Subject" />

        <TextView
            android:id="@+id/tvNotifSubjectWithShape"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_corners"
            android:gravity="center"
            android:text="Subject"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvNotifFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="30dp"
            android:text="From" />

        <TextView
            android:id="@+id/tvNotifFromWithShape"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_corners"
            android:gravity="center"
            android:text="From"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvNotifMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="60dp"
            android:text="Message" />

        <TextView
            android:id="@+id/tvNotifMessageFromWithShape"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/rounded_corners"
            android:gravity="center"
            android:text="Message"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvNotifType"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="120dp"
            android:background="@drawable/rounded_corners"
            android:gravity="center"
            android:text="Type"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>