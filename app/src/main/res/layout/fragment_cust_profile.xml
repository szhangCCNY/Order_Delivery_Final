<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".customer_activities.fragments.CustProfileFragment">


    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:text="Name"
        android:textAllCaps="true"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvProfileVipStatus"
        android:layout_width="80dp"
        android:layout_height="47dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="264dp"
        android:text="Current status" />

    <TextView
        android:id="@+id/VipStatusWithShape"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:text="Vip Status"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvProfileCurrentBalance"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="324dp"
        android:text="Current Balance" />

    <TextView
        android:id="@+id/CurrentBalanceWithShape"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:text="Balance"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvProfileUserWarning"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="384dp"
        android:text="Current User Warning" />

    <TextView
        android:id="@+id/WarningWithShape"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:text="Warnings"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnProfileAddMoney"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:onClick="onProfileAddMoneyClick"
        android:text="Add Balance"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="530dp"
        android:gravity="center"
        android:text="Sign out"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="247dp"
        android:layout_height="194dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="80dp"
        android:src="@drawable/ic_baseline_person_24" />

</RelativeLayout>