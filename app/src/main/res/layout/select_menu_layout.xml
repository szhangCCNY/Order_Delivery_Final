<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvMenuEmployName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivChefMenuImage"
        android:layout_width="410dp"
        android:layout_height="163dp"
        android:layout_below="@+id/tvMenuEmployName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-1dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvEmployeeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivChefMenuImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="43dp"
        android:layout_toStartOf="@+id/ibMenuEmployComment"
        android:text="SEE WHAT PEOPLE ARE SAYING ABOUT OUR CHEF"
        android:textAlignment="center"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/ibMenuEmployComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivChefMenuImage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="7dp"
        app:srcCompat="@drawable/ic_baseline_add_comment_24" />

</RelativeLayout>