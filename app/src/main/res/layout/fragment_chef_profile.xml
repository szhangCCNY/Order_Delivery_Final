<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/tvChefUsername"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:text="Username"
        android:textAllCaps="true"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvChefWarnings"
        android:layout_width="80dp"
        android:layout_height="47dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="264dp"
        android:text="Warnings value" />

    <TextView
        android:id="@+id/ChefWarningsWithShape"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:text="Warnings"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvChefSalary"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="339dp"
        android:text="Salary value" />

    <TextView
        android:id="@+id/ChefSalaryWithShape"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="335dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:text="Salary"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvChefTitle"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="414dp"
        android:text="Title value" />

    <TextView
        android:id="@+id/ChefTitleWithShape"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="410dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:text="Title"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/ChefComplimentsWithShape"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="485dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:text="Compliments"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvChefCompliments"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="485dp"
        android:text="Compliments value" />


    <Button
        android:id="@+id/btnEmployeeSignOut"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="530dp"
        android:gravity="center"
        android:onClick="onProfileAddMoneyClick"
        android:text="Sign out"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="247dp"
        android:layout_height="194dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="80dp"
        android:src="@drawable/ic_baseline_person_24" />

</RelativeLayout>