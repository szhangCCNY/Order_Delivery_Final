<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlChefItemMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvChefItemPrice"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_below="@+id/tvChefItemDesc"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ivChefItemImage"
        android:autoSizeTextType="uniform"
        android:text="Price" />

    <TextView
        android:id="@+id/tvChefItemDesc"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_below="@+id/tvChefItemName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@+id/ivChefItemImage"
        android:text="asdfasdfasdjkhflk sadfjsahdfk djhfjkldhf laskjdfh alskdjfh asljdhf lsadkjhf alskjdh alsdjkhf laskjdhf alsdj asljd falsdfk h" />

    <ImageView
        android:id="@+id/ivChefItemImage"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvChefItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/ivChefItemImage"
        android:text="name" />


</RelativeLayout>